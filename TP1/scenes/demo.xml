<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="scene" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="70">
            <from x="5" y="5" z="5" />
            <to x="0" y="0" z="0" />
        </perspective>
        <perspective id="demoCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="0" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="demoLight">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="demoTexture" path="./scenes/images/vidral.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="demoMaterial">
            <shininess value="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.6" g="0.2" b="0.2" a="1.0" />
            <specular r="0.2" g="0.6" b="0.2" a="1.0" />
            <emissive r="0.2" g="0.2" b="0.6" a="1.0" />
        </material>
        <material id="redMaterial">
            <shininess value="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="0" b="0" a="1.0" />
            <specular r="1.0" g="0" b="0" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>
        <material id="whiteMaterial">
            <shininess value="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>
        <material id="blackMaterial">
            <shininess value="1.0" />
            <ambient r="1" g="1" b="1" a="1.0" />
            <diffuse r="0.05" g="0.05" b="0.05" a="1.0" />
            <specular r="0.05" g="0.05" b="0.05" a="1.0" />
            <emissive r="0" g="0" b="0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <node id="scene">
            <material id="demoMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <noderef id="flat_button" />
            </descendants>

        </node>
        <node id="button_piston">
            <material id="blackMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <leaf type="cylinder" height="0.1" topRadius="0.1" bottomRadius="0.1" slices="12" stacks="12"/>
            </descendants>

        </node>
        <node id="button_plate">
            <material id="redMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="0" z="0.15"/>
            </transformations>

            <descendants>
                <leaf type="cylinder" height="0.025" topRadius="0.75" bottomRadius="0.8" slices="12" stacks="12"/>
            </descendants>

        </node>
        <node id="button_base">
            <material id="whiteMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>

            </transformations>

            <descendants>
                <leaf type="cylinder" height="0.1" topRadius="0.85" bottomRadius="1" slices="12" stacks="12"/>
            </descendants>

        </node>

        <node id="flat_button">
            <material id="demoMaterial" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="xx" angle="-90" />
            </transformations>

            <descendants>
                <noderef id="button_base" />
                <noderef id="button_piston" />
                <noderef id="button_plate" />
            </descendants>

        </node>
    </nodes>
</lsf>
